@model List<KutuphaneMVC.Models.LoanRequest>
@{
    ViewData["Title"] = "√ñd√ºn√ß ƒ∞stekleri Y√∂netimi";
}

<h2 class="mb-4 fw-bold text-primary">üìã √ñd√ºn√ß ƒ∞stekleri Y√∂netimi</h2>

<!-- Filtre -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Durum Filtresi</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">Bekleyen ƒ∞stekler</option>
                        <option value="Pending" selected="@(ViewBag.StatusFilter == "Pending")">‚è≥ Bekleyen</option>
                        <option value="Approved" selected="@(ViewBag.StatusFilter == "Approved")">‚úÖ Onaylanan</option>
                        <option value="Rejected" selected="@(ViewBag.StatusFilter == "Rejected")">‚ùå Reddedilen</option>
                        <option value="Cancelled" selected="@(ViewBag.StatusFilter == "Cancelled")">üö´ ƒ∞ptal Edilen</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">üîç Filtrele</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Kullanƒ±cƒ±</th>
                    <th>Kitap</th>
                    <th>ƒ∞stek Tarihi</th>
                    <th>ƒ∞stenen ƒ∞ade Tarihi</th>
                    <th>Durum</th>
                    <th>ƒ∞≈ülemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    var statusBadge = request.RequestStatus switch
                    {
                        KutuphaneMVC.Models.RequestStatus.Pending => "bg-warning text-dark",
                        KutuphaneMVC.Models.RequestStatus.Approved => "bg-success",
                        KutuphaneMVC.Models.RequestStatus.Rejected => "bg-danger",
                        KutuphaneMVC.Models.RequestStatus.Cancelled => "bg-secondary",
                        _ => "bg-secondary"
                    };

                    var statusText = request.RequestStatus switch
                    {
                        KutuphaneMVC.Models.RequestStatus.Pending => "‚è≥ Bekliyor",
                        KutuphaneMVC.Models.RequestStatus.Approved => "‚úÖ Onaylandƒ±",
                        KutuphaneMVC.Models.RequestStatus.Rejected => "‚ùå Reddedildi",
                        KutuphaneMVC.Models.RequestStatus.Cancelled => "üö´ ƒ∞ptal Edildi",
                        _ => "‚ùì Bilinmiyor"
                    };
                    
                    <tr>
                        <td>@request.RequestId</td>
                        <td>
                            <strong>@request.RequestedByUser?.Username</strong><br />
                            <small class="text-muted">@request.RequestedForMember?.FullName</small>
                        </td>
                        <td>
                            <strong>@request.Book?.Title</strong><br />
                            <small class="text-muted">
                                @request.Book?.Author
                                @if (request.Book != null)
                                {
                                    <span class="badge @(request.Book.Stock > 0 ? "bg-success" : "bg-danger") ms-1">
                                        Stok: @request.Book.Stock
                                    </span>
                                }
                            </small>
                        </td>
                        <td>
                            @request.RequestDate.ToString("dd.MM.yyyy")<br />
                            <small class="text-muted">@request.RequestDate.ToString("HH:mm")</small>
                        </td>
                        <td>@request.RequestedDueDate.ToShortDateString()</td>
                        <td>
                            <span class="badge @statusBadge">@statusText</span>
                            @if (request.ProcessedDate.HasValue)
                            {
                                <br />
                                <small class="text-muted">
                                    @request.ProcessedDate.Value.ToShortDateString()
                                    @if (request.ProcessedByUser != null)
                                    {
                                        <text>(@request.ProcessedByUser.Username)</text>
                                    }
                                </small>
                            }
                        </td>
                        <td>
                            @if (request.RequestStatus == KutuphaneMVC.Models.RequestStatus.Pending)
                            {
                                <div class="btn-group-vertical" role="group">
                                    <form asp-action="Approve" method="post" class="d-inline mb-1"
                                          onsubmit="return confirm('Bu isteƒüi onaylamak istediƒüinizden emin misiniz? √ñd√ºn√ß kaydƒ± olu≈üturulacak ve stok d√º≈üecek.');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@request.RequestId" />
                                        <button type="submit" class="btn btn-sm btn-success w-100"
                                                @(request.Book == null || request.Book.Stock <= 0 ? "disabled" : "")>
                                            ‚úÖ Onayla
                                        </button>
                                    </form>
                                    
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" 
                                            data-bs-target="#rejectModal@(request.RequestId)">
                                        ‚ùå Reddet
                                    </button>
                                </div>

                                <!-- Red Modal -->
                                <div class="modal fade" id="rejectModal@(request.RequestId)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="Reject" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@request.RequestId" />
                                                <div class="modal-header">
                                                    <h5 class="modal-title">ƒ∞steƒüi Reddet</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <label class="form-label">Red Nedeni (Opsiyonel)</label>
                                                    <textarea name="adminNotes" class="form-control" rows="3" 
                                                              placeholder="Kullanƒ±cƒ±ya g√∂sterilecek red nedeni..."></textarea>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ƒ∞ptal</button>
                                                    <button type="submit" class="btn btn-danger">Reddet</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                @if (!string.IsNullOrEmpty(request.AdminNotes))
                                {
                                    <small class="text-muted">
                                        <strong>Not:</strong> @request.AdminNotes
                                    </small>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <strong>üìã Se√ßilen filtreye uygun istek bulunamadƒ±.</strong>
    </div>
}
