@model IEnumerable<KutuphaneMVC.Models.Loan>
@{
    ViewData["Title"] = "√ñd√ºn√ßteki Kitaplar";
}

<div class="container mt-5">
    <h2 class="page-title mb-4 text-center">üìö @ViewData["Title"]</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-turquoise fw-semibold shadow-sm">‚ûï Yeni √ñd√ºn√ß Ver</a>

        <form method="get" asp-action="Index" class="d-flex gap-2">
            <input type="text" name="search" class="form-control" placeholder="√úye veya kitap adƒ±na g√∂re ara..." />
            <button type="submit" class="btn btn-outline-turquoise">üîç Ara</button>
        </form>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center fw-semibold">@TempData["Success"]</div>
    }

    <div class="card shadow-sm border-0 rounded-4">
        <table class="table table-hover align-middle text-center mb-0">
            <thead class="table-turquoise text-white">
                <tr>
                    <th>√úye</th>
                    <th>Kitap</th>
                    <th>Alƒ±≈ü Tarihi</th>
                    <th>Teslim Tarihi</th>
                    <th>Durum</th>
                    <th>ƒ∞≈ülem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var geciktiMi = item.DueDate < DateTime.Now && item.ReturnDate == null;
                    <tr class="@(geciktiMi ? "table-danger" : "")">
                        <td>@item.Member.FullName</td>
                        <td>@item.Book.Title</td>
                        <td>@item.BorrowDate.ToShortDateString()</td>
                        <td>@item.DueDate.ToShortDateString()</td>
                        <td>
                            @if (item.ReturnDate == null)
                            {
                                if (geciktiMi)
                                {
                                    <span class="badge bg-danger text-white px-3 py-2">‚è∞ Gecikti</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark px-3 py-2">üìñ Teslim Edilmedi</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-success text-white px-3 py-2">
                                    ‚úÖ ƒ∞ade Edildi (@item.ReturnDate?.ToShortDateString())
                                </span>
                            }
                        </td>
                        <td>
                            @if (item.ReturnDate == null)
                            {
                                <a asp-action="ReturnBook" asp-route-id="@item.LoanId"
                                   class="btn btn-sm btn-outline-turquoise shadow-sm">üì¶ ƒ∞ade Et</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted mt-4">
            <p>üì≠ ≈ûu anda √∂d√ºn√ßte kitap bulunmuyor.</p>
        </div>
    }
</div>
