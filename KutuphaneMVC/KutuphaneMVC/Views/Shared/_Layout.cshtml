@using Microsoft.AspNetCore.Http
@{
    var isLoggedIn = Context.Session.GetString("username") != null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KutuphaneMVC.styles.css" asp-append-version="true" />
</head>
<body>
    @if (isLoggedIn)
    {
        <!-- Üst Başlık -->
        <header class="py-3 shadow-sm"
                style="background: linear-gradient(90deg, #004D40, #00695C, #00897B);">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Sol kısım: Geri Butonu -->
                <a href="javascript:history.back()" 
                   class="btn btn-outline-light btn-sm fw-semibold px-3">
                    ⬅ Geri Dön
                </a>

                <!-- Orta kısım: Başlık -->
                <h2 class="fw-bold mb-0 text-center flex-grow-1"
                    style="color: #E0F7FA; text-shadow: 1px 1px 4px rgba(0,0,0,0.6);">
                    📚 Kütüphane Yönetim Sistemi
                </h2>

                <!-- Sağ kısım: Çıkış -->
                <a asp-controller="Login" asp-action="Logout"
                   class="btn btn-outline-warning btn-sm fw-semibold px-3">
                    🚪 Çıkış
                </a>
            </div>
        </header>

        <!-- Navigasyon Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark"
             style="background: linear-gradient(90deg, #00695C, #00796B, #009688);">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item mx-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "text-warning fw-bold" : "text-white fw-semibold")"
                               asp-controller="Home" asp-action="Index">🏠 Ana Sayfa</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Book" ? "text-warning fw-bold" : "text-white fw-semibold")"
                               asp-controller="Book" asp-action="Index">📚 Kitaplar</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Member" ? "text-warning fw-bold" : "text-white fw-semibold")"
                               asp-controller="Member" asp-action="Index">👥 Üyeler</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Loan" ? "text-warning fw-bold" : "text-white fw-semibold")"
                               asp-controller="Loan" asp-action="Index">📦 Ödünç İşlemleri</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <!-- Ana İçerik -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (isLoggedIn)
    {
        <!-- Alt Kısım -->
        <footer class="border-top footer text-muted mt-4">
            <div class="container text-center">
                &copy; 2025 - Kütüphane Yönetim Sistemi
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



