@model List<KutuphaneMVC.Models.Book>
@{
    ViewData["Title"] = "Kitaplar";
}

<h2 class="mb-4 fw-bold text-primary">üìö Kitap Kataloƒüu</h2>

<!-- Arama Formu -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchTitle" class="form-control" placeholder="Kitap adƒ± ara..."
                           value="@ViewBag.SearchTitle" />
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchAuthor" class="form-control" placeholder="Yazar ara..."
                           value="@ViewBag.SearchAuthor" />
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchGenre" class="form-control" placeholder="T√ºr ara..."
                           value="@ViewBag.SearchGenre" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">üîç Ara</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Kitap Listesi -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var book in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 hover-shadow">
                    @if (!string.IsNullOrEmpty(book.ImageUrl))
                    {
                        <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" 
                             style="height: 250px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                             style="height: 250px;">
                            <span style="font-size: 5rem;">üìö</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">
                            <strong>Yazar:</strong> @book.Author<br />
                            @if (!string.IsNullOrEmpty(book.Genre))
                            {
                                <strong>T√ºr:</strong> @book.Genre<br />
                            }
                            <strong>Stok:</strong> 
                            @if (book.Stock > 0)
                            {
                                <span class="badge bg-success">@book.Stock adet</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Stokta Yok</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        @if (book.Stock > 0)
                        {
                            <form asp-controller="UserBook" asp-action="RequestLoan" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookId" value="@book.BookId" />
                                <input type="hidden" name="requestedDays" value="15" />
                                <button type="submit" class="btn btn-primary w-100">
                                    üìã √ñd√ºn√ß ƒ∞ste
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100" disabled>
                                ‚ùå Stokta Yok
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <strong>üìö Kitap bulunamadƒ±.</strong> Arama kriterlerinizi deƒüi≈ütirerek tekrar deneyin.
            </div>
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
</style>
