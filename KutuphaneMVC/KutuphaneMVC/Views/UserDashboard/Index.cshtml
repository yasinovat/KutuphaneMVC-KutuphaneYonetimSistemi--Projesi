<!-- Aktif √ñd√ºn√ßler -->
@if (ViewBag.ActiveLoans != null && ((List<KutuphaneMVC.Models.Loan>)ViewBag.ActiveLoans).Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3 fw-bold">üì¶ Aktif √ñd√ºn√ßlerim</h4>
        </div>
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Kitap</th>
                            <th>Alma Tarihi</th>
                            <th>ƒ∞ade Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in (List<KutuphaneMVC.Models.Loan>)ViewBag.ActiveLoans)
                        {
                            var daysLeft = (loan.DueDate - DateTime.Now).Days;
                            var statusClass = daysLeft < 0 ? "danger" : daysLeft <= 3 ? "warning" : "success";
                            
                            <tr>
                                <td>
                                    <strong>@loan.Book?.Title</strong><br />
                                    <small class="text-muted">@loan.Book?.Author</small>
                                </td>
                                <td>@loan.BorrowDate.ToShortDateString()</td>
                                <td>@loan.DueDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge bg-@statusClass">
                                        @if (daysLeft < 0)
                                        {
                                            <text>@Math.Abs(daysLeft) g√ºn gecikti</text>
                                        }
                                        else
                                        {
                                            <text>@daysLeft g√ºn kaldƒ±</text>
                                        }
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Son ƒ∞stekler -->
@if (ViewBag.RecentRequests != null && ((List<KutuphaneMVC.Models.LoanRequest>)ViewBag.RecentRequests).Any())
{
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3 fw-bold">üìã Son ƒ∞steklerim</h4>
        </div>
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Kitap</th>
                            <th>ƒ∞stek Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in (List<KutuphaneMVC.Models.LoanRequest>)ViewBag.RecentRequests)
                        {
                            var statusBadge = request.RequestStatus switch
                            {
                                KutuphaneMVC.Models.RequestStatus.Pending => "bg-warning",
                                KutuphaneMVC.Models.RequestStatus.Approved => "bg-success",
                                KutuphaneMVC.Models.RequestStatus.Rejected => "bg-danger",
                                KutuphaneMVC.Models.RequestStatus.Cancelled => "bg-secondary",
                                _ => "bg-secondary"
                            };

                            var statusText = request.RequestStatus switch
                            {
                                KutuphaneMVC.Models.RequestStatus.Pending => "Bekliyor",
                                KutuphaneMVC.Models.RequestStatus.Approved => "Onaylandƒ±",
                                KutuphaneMVC.Models.RequestStatus.Rejected => "Reddedildi",
                                KutuphaneMVC.Models.RequestStatus.Cancelled => "ƒ∞ptal Edildi",
                                _ => "Bilinmiyor"
                            };
                            
                            <tr>
                                <td>
                                    <strong>@request.Book?.Title</strong><br />
                                    <small class="text-muted">@request.Book?.Author</small>
                                </td>
                                <td>@request.RequestDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge @statusBadge">@statusText</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

